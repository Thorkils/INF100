import java.util.Scanner;

public class Oving2 {
  public static void main ( String [] args ) {
       
    //setter tastatur som scanner
    Scanner tastatur = new Scanner(System.in);    
    
    //sp√∏r bruker om navn
    System.out.println("Hei, hva heter du?");
    
    //setter variabel dittNavn
    String dittNavn = tastatur.nextLine();
    System.out.println("Hva er din yndlingsrett?");
    
    //setter variabel dittNavn
    String dinRett = tastatur.nextLine();
    System.out.println("Hei " + dittNavn + ". Kanskje du kunne ha " + dinRett + " til middag i dag.");
    
    
  }
}
